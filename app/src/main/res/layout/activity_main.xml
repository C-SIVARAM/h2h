<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/button_background1"
    android:layout_height="match_parent"
    tools:context="com.example.H2H.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        app:cardCornerRadius="330dp"
        android:layout_marginTop="120dp">

        <ImageView
            android:layout_width="115dp"
            android:layout_height="120dp"
           android:layout_marginTop="-1dp"
            app:srcCompat="@drawable/c" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/netconnection"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="57dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="HAPPY"
            android:textColor="#C3FBC02D"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="serif"
            android:text="To    Happy"
            android:textColor="#D5FBC02D"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Chellam"
            android:textColor="#D7FBC02D"
            android:textSize="80dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-20dp"
            android:fontFamily="cursive"
            android:text="Food "
            android:textColor="#FFA000"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
  android:id="@+id/neterror"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
   android:visibility="gone"
android:background="@color/white"
android:orientation="vertical">

<ImageView
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="200dp"
    app:srcCompat="@drawable/ic_baseline_wifi_off_24" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#474649"
    android:text="No Internet  Connection"
    android:textSize="24sp"
    android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>